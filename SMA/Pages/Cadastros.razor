        <button class="btn btn-outline-danger inside" style="border-radius: 50px!important; position: absolute; right: 0; bottom: 0; margin-bottom: 100px;">
            <b>+</b>
        </button>
    </div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
        <div class="container-fluid p-2">

            <div class="title">Novo aparelho para manutenção</div>

            <form class="row g-3 mt-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="inputEmail4" placeholder="Aparelho" @bind="aparelho.Nome">
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="inputPassword4" placeholder="Marca" @bind="aparelho.Marca">
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="inputAddress" placeholder="Modelo" @bind="aparelho.Modelo">
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="inputAddress" placeholder="Número de série" @bind="aparelho.NumeroDeSerie">
                </div>
                <div class="col-12">
                    <input type="text" class="form-control" id="inputAddress" placeholder="Descrição do Defeito" @bind="aparelho.DescricaoDoDefeito">
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck" @bind="aparelho.EstaNaGarantia">
                        <label class="form-check-label" for="gridCheck">
                            Está na garantia?
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" @onclick="create">Cadastrar Aparelho</button>
                </div>
            </form>

        </div>
    </div>

</div>
@code {
    Aparelho aparelho = new Aparelho();

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    private void create()
    {
        aparelho.DataDeEntrada = DateTime.Today;
        aparelho.Status = StatusEnum.AguardandoAnalise;

        repo.Create(aparelho);

        NavManager.NavigateTo("aparelhos");
    }
}
